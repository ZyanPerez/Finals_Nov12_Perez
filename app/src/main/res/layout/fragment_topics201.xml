<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="myfirstapp.example.com.myfirstapp.topics201$PlaceholderFragment"
    >
    <!--android:id="@+id/"-->

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/bookshelf"
        android:scaleType="fitEnd"/>

    <Button
        android:layout_width="@dimen/abc_search_view_preferred_width"
        android:layout_height="wrap_content"
        android:text="Relational Database Concepts"
        android:id="@+id/btn_relational"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="5dp"
        android:background="#DA5757"
        android:onClick="goToRelational"/>

    <Button
        android:layout_width="@dimen/abc_search_view_preferred_width"
        android:layout_height="wrap_content"
        android:text="Getting Started with Data Studio"
        android:id="@+id/btn_db2"
        android:layout_below="@+id/btn_relational"
        android:layout_centerHorizontal="true"
        android:background="#DA5757"
        android:layout_marginBottom="5dp"
        android:onClick="goToDb2"/>

    <Button
        android:layout_width="@dimen/abc_search_view_preferred_width"
        android:layout_height="wrap_content"
        android:text="Backup And Recovery"
        android:id="@+id/btn_sql"
        android:layout_below="@+id/btn_db2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:background="#DA5757"
        android:onClick="goToSql"/>


</RelativeLayout>
